@model GuestEventsListVM
@{
    ViewData["Title"] = "AddEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddEvent for @Model.guest.Forename @Model.guest.Surname</h1>

@{
    if (Model.Events.Count() > 1)
    {
        <form asp-action="AddEvent">
            <input type="hidden" asp-for="@Model.guest.GuestId" />

            <div class="form-group">
                <select asp-for="selectedEvent" class='form-control'
                asp-items=Model.Events>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    }
    else
    {
        <h2>There are no Events to Add</h2>

    }
}
