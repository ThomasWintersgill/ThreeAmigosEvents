@model IEnumerable<FoodItemVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Menu List</h1>
<p>
    <a asp-action="CreateFood">Create New Food Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FoodItemId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FoodItemId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FoodItemId">Delete</a> |
                    

                </td>
                

            </tr>
        }
    </tbody>
</table>
